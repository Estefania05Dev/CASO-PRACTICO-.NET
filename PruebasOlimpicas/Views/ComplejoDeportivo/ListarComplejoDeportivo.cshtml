@model List<PruebasOlimpicas.Models.ComplejoDeportivo.ComplejoDeportivoModel>
@{
    ViewData["Title"] = "ListarComplejoDeportivo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PruebasOlimpicas.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="card">
        <div class="contenedor">
            <div class="row" style="width: 1200px;">
                <div class="col-md-12">
                    <div class="well well-sm">
                        <div class="card-body">
                            <legend class="text-center header"> LISTA DE COMPLEJOS DEPORTIVOS <i class="bi bi-flag"></i></legend>
                            <a asp-action="GuardarComplejoDeportivo" asp-controller="ComplejoDeportivo" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
                            <hr />
                            <table class="table table-bordered">
                                <thead class="text-center">
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Area Total</th>
                                        <th>Localizacion</th>
                                        <th>Jefe de organizacion</th>
                                        <th style="display:none">Sede</th>
                                        <th>Nombre Sede</th>
                                        <th>Accciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.DescripComplejoDeport</td>
                                            <td>@item.AreaTotal</td>
                                            <td>@item.Localizacion</td>
                                            <td>@item.JefeOrga</td>
                                            <td style="display:none">@item.IdSede</td>
                                            <td>@item.DescripSede</td>
                                            <td class="text-center">
                                                <a asp-action="EditarComplejoDeportivo" asp-controller="ComplejoDeportivo" class="btn btn-primary btn-sm" asp-route-IdComplejoDeportivo="@item.IdComplejoDeport"><i class="bi bi-pen"></i> Editar</a>
                                                <a asp-action="EliminarComplejoDeportivo" asp-controller="ComplejoDeportivo" class="btn btn-danger btn-sm" asp-route-IdComplejoDeportivo="@item.IdComplejoDeport"><i class="bi bi-trash3"></i> Eliminar</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

